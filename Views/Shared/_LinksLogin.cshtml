@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager

 <ul class="nav-item">
    @if (signInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Hola, @User.Identity.Name</span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-action="Logout" asp-controller="Usuarios">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Registro" asp-controller="Controller">
                Registro
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Login" asp-controller="Controller">
                Login
            </a>
        </li>
    }
</ul>
